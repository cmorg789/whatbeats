# MongoDB Connection
# URI for connecting to MongoDB database
MONGODB_URI=mongodb://localhost:27017
# Name of the MongoDB database to use
MONGODB_DB=whatbeats

# LLM Service (OpenRouter/OpenAI compatible)
# URL endpoint for the LLM API
LLM_API_URL=https://openrouter.ai/api/v1/chat/completions
# Model identifier to use for LLM requests
LLM_MODEL=meta-llama/llama-4-maverick:free

# LLM Logging Configuration
# Whether to enable logging of LLM interactions
LLM_LOGGING_ENABLED=true
# Log level for LLM service (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LLM_LOG_LEVEL=INFO
# Directory to store log files (relative to project root)
LLM_LOG_DIR=logs
# Name of the log file
LLM_LOG_FILE=llm_responses.log

# Admin Credentials
# Username for admin access
ADMIN_USERNAME=admin

# JWT Authentication
# Algorithm used for JWT signing (HS256 recommended)
JWT_ALGORITHM=HS256
# Expiration time for access tokens in minutes
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting Configuration
# Enable/disable rate limiting for LLM-related endpoints
RATE_LIMIT_ENABLED=true
# Maximum number of requests allowed within the rate limit period
RATE_LIMIT_REQUESTS=10
# Rate limit period in seconds
RATE_LIMIT_PERIOD=60

### These are automattically generated by generate_secrets.sh. Delete to force a reset on startup
# Secret key for signing JWT tokens - generate with: openssl rand -base64 32
JWT_SECRET_KEY=
# Bcrypt hash of admin password
ADMIN_PASSWORD_HASH=
# API key for the LLM Service
LLM_API_KEY=